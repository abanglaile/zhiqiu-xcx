/* pages/stuStatus/stuStatus.wxss */
@import '../../iviewModule/card/index.wxss';
@import '../../iviewModule/avatar/index.wxss';

page {
  background-color: #f8f8f9;
}

.wrapper {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.g-card {
  width: 90%;
  margin-top: 15px;
}
.g-card:last-child {
  margin-bottom: 15px;
}
.g-button {
  margin: 5px !important;
  height: 30px !important;
  line-height: 30px !important;
}
button.g-button-plain {
  color: #409eff !important;
  background-color: #ecf5ff !important;
  border-color: #b3d8ff !important;
}
.title {
  font-size: 16px;
  padding-top: 5px;
}
.desc {
  text-align: left;
}

.dialog-button-wrapper {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
}
.reset-button-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 15%;
  font-size: 16px;
  justify-content: center;
}
.confirm-button-wrapper {
  width: 80%;
}

.sort-list{
  justify-content: space-around;
  display: flex;
  /* background: white; */
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  /* color: #19be6b; */
  align-content: center;
  border-bottom: 1rpx solid #ECECEC;
  align-items: center;
  background-color: #f8f8f9;
}
.sort{
  text-align: center;
  /* margin: auto 0; */
  height: 100%;
  font-size: 28rpx;
  line-height: 70rpx;
  /* border-right: 1rpx solid #ECECEC;  */
  flex: 1;
}


.filter-btn-select{
  /* background-color: #e6f7ff; */
  /* color: #2d8cf0; */
  background-color: #f6ffed;
  color: #19be6b;
  margin: 0 30rpx 0 0;
}
.filter-btn-select::after{
  border-color: #19be6b;
}
.filter-btn{
  background-color: white; 
  color: #8c8c8c;
  margin: 0 30rpx 0 0;
}
button[size=mini] {
  padding: 0 30rpx;
}
.unfold{
  transform: rotate(90deg);
  margin-left: 8rpx;
}
