<view>
  <view>
    <view class="sort-list">
      <view class="sort" data-num="1" bindtap="selectTab">
        {{select_sign}}
        <mp-icon extClass="unfold" icon="arrow" size="10" color="#ccc" />
      </view>
      <view class="sort" data-num="3" bindtap="selectTab">
        课程类型
        <mp-icon extClass="unfold" icon="arrow" size="10" color="#ccc" />
      </view>
      <view class="sort" data-num="2" bindtap="selectTab">
        {{select_time}}
        <mp-icon extClass="unfold" icon="arrow" size="10" color="#ccc" />
      </view>
      
    </view>  

  <mp-actionSheet bindactiontap="selectTime" show="{{select_tab_num == 2 && filter_visible}}" actions="{{time_list}}" >
  </mp-actionSheet>

  <mp-actionSheet bindactiontap="selectSign" show="{{select_tab_num == 1 && filter_visible}}" actions="{{sign_list}}" >
  </mp-actionSheet>

  <mp-actionSheet show="{{select_tab_num == 4 && filter_visible}}" actions="{{[{ text: '全部时间', value: 1 },{ text: '本周', value: 2 },{ text: '一周内', type: 'warn', value: 3 }]}}" >
  </mp-actionSheet>

  <mp-halfScreenDialog 
    show="{{(select_tab_num == 3 && filter_visible)}}"
    maskClosable="false"
    buttons="{{[{type: 'default', text: '重置', value: 0}, {type: 'primary', text: '确定', value: 1}]}}"
  >
    <view slot="title">选择课程</view>
    <view slot="desc">
      <view style="font-size: 30rpx; margin: 20rpx 0 20rpx 0;">授课方式</view>
      <view>
        <button data-index="{{item.index}}" size="mini" class="{{item.selected ? 'filter-btn-select' : 'filter-btn'}}" 
          wx:for="{{label_list}}"
          bindtap="selectLabel">{{item.text}}</button>
      </view>
      <view style="font-size: 30rpx; margin: 20rpx 0 20rpx 0;">科目</view>
      <view>     
        <button data-index="{{item.id}}" size="mini" class="{{item.selected ? 'filter-btn-select' : 'filter-btn'}}" 
          wx:for="{{course_list}}"
          bindtap="selectCourse">{{item.text}}</button>
      </view>
    </view>
  </mp-halfScreenDialog>
  
    <view wx:for="{{testJson}}" wx:for-index="idx" wx:key="id" style="padding: 6px 0 0 0;">
      <view class="i-card">
        <view class="i-card-header" style="padding: 8px 16px;">
          <view class="i-card-header-content" style="font-size:16px;font-weight:bold">
            {{item.stuName}}
          </view>
          <view class="i-card-header-extra">
            <i-tag class="i-tags" color="{{item.message=='函授'? 'green':'blue'}}">{{item.message}}</i-tag>
          </view>
        </view>
        <view>
          <view style="padding:0 0 4px 16px;font-size:13px;color:gray;">
            <i-icon type="clock" size="20" color="#ccc" style="padding: 0 3px 0 0;" />{{item.time}}
          </view>
          <view class="i-card-header" style="padding:0 0 12px 16px;font-size:13px;color:gray;">
            <i-icon type="coordinates_fill" size="20" color="#ccc" style="padding: 0 3px 0 0;" />{{item.className}}
          </view>
        </view>
        <view class="i-card-body" style="padding:8px 16px;font-size:13px;color:gray;">
          <view>
            <i-icon type="mine" size="20" color="#ccc" style="padding: 0 3px 0 0;" />{{item.teacherName}}
          </view>
        </view>
      </view>
    </view>
    <i-load-more tip="上拉加载更多" loading="{{false}}" />
  </view>
</view>