/**index.wxss**/
page {
    background-color: #f8f8f9;
}

.wrapper {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    justify-content: center;
    align-items: center;
}

.logo {
    width: 100px;
    height: 100px;
    border: solid 1px #dddee1;
    border-radius: 30px;
    margin-bottom: 10px;
}

.discription {
    color: #495060;
    font-size: 16px;
    margin-bottom: 5px;
}

.divider {
    width: 90%
}

.card {
    display: flex;
    box-sizing: border-box;
    padding: 15px;
    width: 80%;
    height: 80px;
    align-items: center;
    border: solid 1px #dddee1;
    border-radius: 7px;
    background-color: #fff;
    margin-bottom: 15px;
}
.avatar {
    width: 50px;
    height: 50px;
}
.card-content {
    box-sizing: border-box;
    width: calc(100% - 50px - 30px);
    padding-left: 15px;
}
.card-name {
    font-size: 16px;
    color: #495060;
}
.card-logo {
    width: 30px;
    height: 30px;
    text-align: center;
    /* border: solid 1px #dddee1; */
    border-radius: 5px;
}
.new {
    font-size: 40px !important;
    line-height: 50px !important;
    text-align: center;
    box-sizing: border-box;
    border: solid 1px #dddee1;
    color: #495060;
}