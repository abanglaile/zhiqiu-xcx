/* pages/contractLog.wxss */
@import '../../iviewModule/card/index.wxss';
@import '../../iviewModule/avatar/index.wxss';

page {
    background-color: #f8f8f9;
}

.wrapper {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    justify-content: center;
    align-items: center;
}

.g-card {
    width: 90%;
    margin-top: 15px;
}

.g-card:last-child {
    margin-bottom: 15px;
}

.row {
    padding: 10px;
}

.col {
    display: flex !important;
    flex-direction: column;
    align-items: center;
}

.col-left {
    border-right: solid 1px #e9eaec;
}