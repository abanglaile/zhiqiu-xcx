@import '../../iviewModule/card/index.wxss';
@import '../../iviewModule/avatar/index.wxss';

page {
    background-color: #f8f8f9;
}

.wrapper {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    justify-content: center;
    align-items: center;
}

.g-card {
    width: 80%;
    margin-top: 20rpx;
    padding: 36rpx 36rpx 36rpx 36rpx;
    box-shadow:0 5px 10px 0 rgba(0, 0, 0, 0.2);
}

.g-card:last-child {
    margin-bottom: 20rpx;
}